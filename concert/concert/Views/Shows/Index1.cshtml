@model IEnumerable<concert.Models.Show>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> @*ลิ้งให้รูปเป็นวงกลม*@
@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Shared/_Layout - Copy.cshtml";
}

<h2>ตารางการแสดง</h2>


<link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="myTable" class="table table-striped table-bordered " style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Place.NamePlace)
            </th>
            <th class="font text-center">
                @Html.DisplayNameFor(model => model.Band.NameBand)
            </th>
            <th class="font text-center">
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th class="font text-center">

                จัดการข้อมูล
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td class="font">
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td class="font">
                @Html.DisplayFor(modelItem => item.Place.NamePlace)
            </td>
            <td class="font">
                @Html.DisplayFor(modelItem => item.Band.NameBand)
            </td>
            <td>
                @if (item.Picture != null)
                {
                    <img src="data:image/png;base64,@Convert.ToBase64String(item.Picture)" , class="img-circle" alt="Cinque Terre" width="200" height="150"> @*ลิ้งให้รูปเป็นวงกลม*@
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDShow }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDShow }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IDShow },
                   new { onclick = "return confirm('คุณจะลบใช่มั้ย ?')" })
            </td>

        </tr>
        }

    </tbody>
</table>
@section Scripts{
    @Scripts.Render("~bundles/jqeryval")
    <script src="~/Scripts/bootstrap-editable.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}