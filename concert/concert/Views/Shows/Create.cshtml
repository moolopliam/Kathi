@model concert.Models.Show

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout - Copy.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Shows", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Show</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.NameShow, htmlAttributes: new { @class = "control-label col-md-2" })
